{
  "build": {
    "production": {
      "autoIncrement": true,
      "node": "20.0.0",
      "channel": "production",
      "env": {
        "EXPO_BUNDLE_IDENTIFIER": "com.nanaeats.nana_app",
        "EXPO_IMAGE_UTILS_NO_SHARP": "1"
      }
    },
    "preview": {
      "node": "20.0.0",
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "ios_production": {
      "extends": "production",
      "env": {
        "EXPO_BUNDLE_IDENTIFIER": "com.nanaeats.nana.app"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./ANDROID_SERVICE_ACCOUNT.json",
        "track": "internal",
        "releaseStatus": "draft"
      }
    }
  },
  "cli": {
    "version": ">=2.2.0",
    "requireCommit": true,
    "appVersionSource": "remote"
  }
}
